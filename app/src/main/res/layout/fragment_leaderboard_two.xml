<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardTwoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/clHomeLeaderboardSecondPlace"
        app:layout_constraintStart_toStartOf="@+id/clHomeLeaderboardSecondPlace"
        app:layout_constraintTop_toBottomOf="@+id/clHomeLeaderboardSecondPlace">

        <ImageView
            android:id="@+id/ivLeaderboardTwoBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/custom_background_1" />

        <ImageView
            android:id="@+id/ivLeaderboardTwoIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/tvLeaderboardTwoUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/montserrat"
            android:text="loading ..."
            app:layout_constraintBottom_toBottomOf="@+id/ivLeaderboardTwoIcon"
            app:layout_constraintStart_toEndOf="@+id/ivLeaderboardTwoIcon"
            app:layout_constraintTop_toTopOf="@+id/ivLeaderboardTwoIcon" />

        <ImageView
            android:id="@+id/ivLeaderboardTwoStats"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/custom_leaderboard_background_two" />

        <TextView
            android:id="@+id/tvLeaderboardTwoPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="0pts"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivLeaderboardTwoStats"
            app:layout_constraintEnd_toEndOf="@+id/ivLeaderboardTwoStats"
            app:layout_constraintStart_toStartOf="@+id/ivLeaderboardTwoStats"
            app:layout_constraintTop_toTopOf="@+id/ivLeaderboardTwoStats" />

        <ImageView
            android:id="@+id/ivLeaderboardTwoBorder"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/custom_icon_border_2"
            app:layout_constraintBottom_toBottomOf="@+id/ivLeaderboardTwoIcon"
            app:layout_constraintEnd_toEndOf="@+id/ivLeaderboardTwoIcon"
            app:layout_constraintStart_toStartOf="@+id/ivLeaderboardTwoIcon"
            app:layout_constraintTop_toTopOf="@+id/ivLeaderboardTwoIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>