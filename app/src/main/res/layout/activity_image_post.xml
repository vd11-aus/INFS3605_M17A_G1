<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clImagePostMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".ImagePostActivity">

    <ImageView
        android:id="@+id/ivImagePostBackground"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:scaleType="centerCrop"
        android:tint="#6F000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/ivImagePostBackgroundOne"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_background_1" />

    <EditText
        android:id="@+id/etImagePostTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Your title"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="45dp"
        android:textColor="#000000"
        android:textColorHint="#555555"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivImagePostBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivImagePostBackgroundOne"
        app:layout_constraintStart_toStartOf="@+id/ivImagePostBackgroundOne" />

    <EditText
        android:id="@+id/etImagePostOverview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:gravity="start|top"
        android:hint="Briefly describe your post."
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivImagePostBackgroundOne"
        app:layout_constraintEnd_toEndOf="@+id/ivImagePostBackgroundOne"
        app:layout_constraintStart_toStartOf="@+id/ivImagePostBackgroundOne"
        app:layout_constraintTop_toBottomOf="@+id/ivImagePostBackground" />

    <Button
        android:id="@+id/btImagePostProceed"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_background_1"
        android:fontFamily="@font/montserrat"
        android:text="Proceed"
        android:textColor="#F0C862"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibImagePostBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/ivImagePostBackgroundTwo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImagePostBackgroundOne"
        app:srcCompat="@drawable/custom_background_1" />

    <ImageView
        android:id="@+id/ivImagePostBackgroundThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/btImagePostProceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImagePostBackgroundTwo"
        app:srcCompat="@drawable/custom_background_1" />

    <Spinner
        android:id="@+id/spImagePostCategorySelect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/ivImagePostBackgroundTwo"
        app:layout_constraintEnd_toEndOf="@+id/ivImagePostBackgroundTwo"
        app:layout_constraintStart_toStartOf="@+id/ivImagePostBackgroundTwo"
        app:layout_constraintTop_toTopOf="@+id/ivImagePostBackgroundTwo" />

    <ImageView
        android:id="@+id/ivImagePostCategoryDownImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivImagePostBackgroundTwo"
        app:layout_constraintEnd_toEndOf="@+id/ivImagePostBackgroundTwo"
        app:layout_constraintTop_toTopOf="@+id/ivImagePostBackgroundTwo"
        app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

    <ImageView
        android:id="@+id/ivImagePostInsertMedia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivImagePostBackgroundThree"
        app:layout_constraintEnd_toEndOf="@+id/ivImagePostBackgroundThree"
        app:layout_constraintStart_toStartOf="@+id/ivImagePostBackgroundThree"
        app:layout_constraintTop_toTopOf="@+id/ivImagePostBackgroundThree"
        app:srcCompat="@drawable/insert_media_large" />
</androidx.constraintlayout.widget.ConstraintLayout>